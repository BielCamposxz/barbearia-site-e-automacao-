@{
    ViewData["title"] = "Unidades";
    Layout = "_OpcoesLayout";
}

<div class="container mt-4">

    <h2 class="text-white fw-light text-center mb-4">
        Escolha uma unidade
    </h2>

    <form method="post">

        <!-- barbearia 1 -->
        <div class="unidade-card d-flex align-items-center rounded-4 p-3 mb-3">
            <div class="me-3">
                <img src="~/images/fachada1.jpg"
                     class="unidade-img"
                     alt="Unidade São Firmino">
            </div>

            <div class="flex-grow-1">
                <h5 class="mb-1 text-white fw-semibold">
                    Hoonigans Barber Company
                </h5>
                <span class="unidade-badge">Unidade São Firmino</span>
                <p class="endereco mt-1 mb-0">
                    Rua Quinze de Novembro, 5630 - Joinville
                </p>
            </div>

            <div>
                <input type="radio" class="btn-check" name="unidade" id="radio1" autocomplete="off">
                <label for="radio1" class="circle-check d-flex justify-content-center align-items-center">
                    <i class="bi bi-check"></i>
                </label>
            </div>

        </div>
        
        <!-- barbearia 2 -->
        <div class="unidade-card d-flex align-items-center rounded-4 p-3 mb-3">
            <div class="me-3">
                <img src="~/images/fachada2.jpg"
                     class="unidade-img"
                     alt="Unidade XV de Novembro">
            </div>

            <div class="flex-grow-1">
                <h5 class="mb-1 text-white fw-semibold">
                    Hoonigans Barber Company
                </h5>
                <span class="unidade-badge">Unidade XV de Novembro</span>
                <p class="endereco mt-1 mb-0">
                    Rua Quinze de Novembro, 5630 - Joinville
                </p>
            </div>

            <div>
                <input type="radio" class="btn-check" name="unidade" id="radio2" autocomplete="off">
                <label for="radio2" class="circle-check d-flex justify-content-center align-items-center">
                    <i class="bi bi-check"></i>
                </label>
            </div>

        </div>
         
        <!-- botoes -->
        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-outline-light rounded-pill px-4"
               asp-action="Index"
               asp-controller="Home">
                <i class="bi bi-chevron-left"></i>
                Voltar
            </a>

            <button type="submit"
                    class="btn btn-light rounded-pill px-4 fw-semibold" asp-action="Index" asp-controller="Barbeiro">
                Avançar
                <i class="bi bi-arrow-right"></i>
            </button>

        </div>

    </form>

</div>
