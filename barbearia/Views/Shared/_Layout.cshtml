<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - barbearia</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/barbearia.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@600;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<body>
    <header class="hero-section text-white">

        <nav class="navbar navbar-expand-lg navbar-dark position-absolute w-100 top-0">
            <div class="container">
                <a class="navbar-brand brand-logo" href="/">
                    BARBER SHOP
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="menu">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Agendamento">Agendar</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Contato">Contato</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container d-flex flex-column justify-content-center align-items-center text-center h-100">
            <h1 class="hero-title mb-4">
                Tradição & Estilo
            </h1>

            <p class="hero-subtitle mb-4">
                Uma experiência premium em corte e barba.
            </p>

            <a href="/Agendamento" class="btn btn-custom btn-lg px-5 py-3">
                AGENDAR HORÁRIO
            </a>
        </div>

    </header>



    @RenderBody()

    <footer class="bg-black text-white text-center py-4">
        <div class="container">
            <p class="mb-1 fw-light">© 2026 Barber Shop</p>
            <small class="text-secondary">Estilo • Elegância • Atitude</small>
        </div>
    </footer>

    <a href="https://wa.me/5562994524747?text=Olá,%20quero%20agendar%20um%20horário%20na%20barbearia."
       class="whatsapp-float"
       target="_blank"
       style="color:white;">
        <i class="bi bi-whatsapp"></i>
    </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
